<div id="search-results">

  <div class="col-lg-12">
      <div class="col-lg-6 search-info">
          <h2>My favorites</h2>
          <p>Currently, you have <b><%= @data[:results].length %></b> favorites. You can add more from the <%= link_to 'search results', controller: 'search', action: 'index' %>.</p>
      </div>
  </div>

  <div class="col-lg-12">
      <% i = 0; %>
      <% @data[:results].each do |result| %>
      <% i = i + 1; %>
      <div class="col-lg-4 result-box origin-<%= result[:origin] %>" data-result-json="<%= result[:json] %>" id="<%= Digest::MD5.hexdigest result[:json] %>">
          <%= render 'search/result_hovers', :result => result %>
          <%= render 'search/result_header', :result => result %>
          <%= render 'search/result_map', :result => result %>
          <%= render 'search/result_location', :result => result %>
          <%= render 'search/result_distance', :result => result %>
          <%= render 'search/result_tags', :result => result %>

          <div class="details-wrapper">
              <%= render 'search/result_dropdown', :result => result %>
              <%= render 'search/result_origin', :result => result %>
          </div>
      </div>
      <% if i.to_i % 3 === 0 %>
  </div>
  <div class="col-lg-12">
      <% end %>
      <% end %>
  </div>
  <div class="col-lg-12">
      <hr>
  </div>

</div>
