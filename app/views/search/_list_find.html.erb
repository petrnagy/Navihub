<%= render 'heading' %>
<div class="col-lg-12">
    <% i = 0; %>
    <% @data[:results].each do |result| %>
    <% i = i + 1; %>
    <div class="col-lg-4 result-box origin-<%= result[:origin] %>" data-result-json="<%= result[:json] %>" id="<%= Digest::MD5.hexdigest result[:json] %>">
        <%= render 'result_header', :result => result %>
        <%= render 'result_map', :result => result %>
        <%= render 'result_location', :result => result %>
        <%= render 'result_distance', :result => result %>
        <%= render 'result_tags', :result => result %>

        <div class="details-wrapper">
            <%= render 'result_dropdown', :result => result %>
            <%= render 'result_origin', :result => result %>
        </div>
    </div>
    <% if i.to_i % 3 === 0 %>
</div>
<div class="col-lg-12">
    <% end %>
    <% end %>
</div>
<div class="col-lg-12">
    <hr>
</div>
<%= render 'more_btn' %>
