<%= form_for(@form, url: url_for(controller: 'feedback')) do |f| %>
<%= errors_for @form %>
<div class="well">
    <fieldset>
        <legend>What's on your mind?</legend>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <%= f.text_field(:name, {placeholder: 'Name (required)', class: 'form-control', required: true}) %>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <%= f.text_field :email, {placeholder: 'E-mail (required)', class: 'form-control', required: true} %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <%= text_area :form, :text, {class: 'form-control required', placeholder: 'Your message (required)', maxlength: 500, rows: 3, required: true} %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-10">
                <p class="small">
                    Do you like this page? Have you found a bug? Any questions? Let me know!
                </p>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <%= f.submit 'Submit', class: 'btn btn-success pull-right btn-submit' %>
                </div>
            </div>
        </div>
    </fieldset>
</div>
<% end %>
