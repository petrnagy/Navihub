<%= form_for(@form, url: url_for(controller: 'feedback')) do |f| %>
<% if @form.errors %>
<% @form.errors.messages.each do |field, messages| %>
<div class="alert alert-danger">
    Field <strong><%= field.to_s %></strong> <%= messages.join(', ') %>
</div>
<% end %>
<% end %>
<div class="well">
    <fieldset>
        <legend>Contact form</legend>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <%= f.text_field(:name, {placeholder: 'Name', class: 'form-control'}) %>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <%= f.text_field :email, {placeholder: 'E-mail', class: 'form-control'} %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <%= text_area :form, :text, {class: 'form-control required', placeholder: 'Your message (required)', maxlength: 500, rows: 3} %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-10">
                <p class="small">
                    Do you like this page? Have you found a bug? Any questions? Let us know!
                </p>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <%= f.submit 'Submit', class: 'btn btn-success pull-right btn-submit' %>
                </div>
            </div>
        </div>
    </fieldset>
</div>
<% end %>
