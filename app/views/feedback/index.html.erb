<h1>Feedback</h1>
<%= form_tag("/feedback", method: "post") do %>
  <div class="well">
    <fieldset>
      <legend>Contact form</legend>
      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <%= text_field_tag 'name', nil, placeholder: 'Name', class: 'form-control' %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="form-group">
            <%= text_field_tag 'email', nil, placeholder: 'E-mail', class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="form-group">
            <%= text_area_tag 'message', nil, class: 'form-control required', placeholder: 'Your message (required)', maxlength: 500, rows: 3 %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-10">
          <p class="small">
            Do you like this page? Have you found a bug? Any questions? Let us know!
          </p>
        </div>
        <div class="col-lg-2">
          <div class="form-group">
            <%= submit_tag 'Submit', class: 'btn btn-primary pull-right btn-submit' %>
          </div>
        </div>
      </div>
    </fieldset>
  </div>
<% end %>
