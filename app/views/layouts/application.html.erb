    <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- Facebook & Linkedin Meta -->
    <meta property="og:site_name" content="Navihub">
    <meta property="og:title" content="Find stuff around you!">
    <meta property="og:url" content="<%= root_path %>">
    <meta property="og:description" content="Explore the world around you with your browser.">
