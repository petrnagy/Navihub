    <meta name="twitter:image" content="/assets/logo_square.png">

    <!-- noscript #1 -->
    <noscript>
    <style type="text/css">
      div, footer { display: none; }
      noscript div { display: block !important; }
      body { color: #333; background: white; width: 500px; margin: 100px auto; }
      h1 { font: bold 47px/1.5 sans-serif; margin: .6em 0; }
      p { font: 21px/1.5 Georgia,serif; margin: 1.5em 0; }
      small { font-size: 70%; color: gray; }
    </style>
    </noscript>
    <!-- Scripts -->
    <% if @failsafe != true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <% end %>
  </head>
  <body id="body" class="<%= @device_cls %> <%= @is_logged_in_cls %>">
    <!-- Inline scripts -->
    <script>
      serverData = {
        controller: '<%= params[:controller] %>',
        action: '<%= params[:action] %>',
        loc: {
          lat: <%= @location == nil ? 'null' : @location.latitude %>,
          lng: <%= @location == nil ? 'null' : @location.longitude %>,
          lock: <%= @location == nil ? 'null' : ( @location.lock == true ? 'true' : 'false' ) %>
        }
      }
    </script>
