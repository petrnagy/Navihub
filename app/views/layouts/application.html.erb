    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/logo/icons/stroke/apple-touch-icon-114x114.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/logo/icons/stroke/apple-touch-icon-72x72.png" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/logo/icons/stroke/apple-touch-icon-144x144.png" />
    <link rel="apple-touch-icon-precomposed" sizes="60x60" href="/assets/logo/icons/stroke/apple-touch-icon-60x60.png" />
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="/assets/logo/icons/stroke/apple-touch-icon-120x120.png" />
    <link rel="apple-touch-icon-precomposed" sizes="76x76" href="/assets/logo/icons/stroke/apple-touch-icon-76x76.png" />
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="/assets/logo/icons/stroke/apple-touch-icon-152x152.png" />
    <link rel="icon" type="image/png" href="/assets/logo/icons/stroke/favicon-196x196.png" sizes="196x196" />
    <link rel="icon" type="image/png" href="/assets/logo/icons/stroke/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/png" href="/assets/logo/icons/stroke/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/assets/logo/icons/stroke/favicon-16x16.png" sizes="16x16" />
    <link rel="icon" type="image/png" href="/assets/logo/icons/stroke/favicon-128.png" sizes="128x128" />
    <meta name="application-name" content="Navihub.net | Find places around you!"/>
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="/assets/logo/icons/stroke/mstile-144x144.png" />
    <meta name="msapplication-square70x70logo" content="/assets/logo/icons/stroke/mstile-70x70.png" />
    <meta name="msapplication-square150x150logo" content="/assets/logo/icons/stroke/mstile-150x150.png" />
    <meta name="msapplication-wide310x150logo" content="/assets/logo/icons/stroke/mstile-310x150.png" />
    <meta name="msapplication-square310x310logo" content="/assets/logo/icons/stroke/mstile-310x310.png" />
    <!-- Styles -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <!-- Font awesome cdn -->
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Facebook & Linkedin Meta -->
    <meta property="og:site_name" content="<%= @page_name %>" />
    <meta property="og:title" content="<%= @page_title %> | <%= @page_name %>" />
    <meta property="og:url" content="<%= root_url %>" />
    <meta property="og:description" content="<%= @page_desc %>" />
    <meta property="og:image" content="/assets/logo/buildings_stroke_500x500.png" />
    <!-- Twitter Meta -->
    <meta name="twitter:card" content="<%= @page_name %>" />
    <meta name="twitter:url" content="<%= root_url %>" />
    <meta name="twitter:title" content="<%= @page_title %> | <%= @page_name %>" />
    <meta name="twitter:description" content="<%= @page_desc %>" />
    <meta name="twitter:image" content="/assets/logo/buildings_stroke_500x500.png" />
    <!-- Site verification -->
    <meta name="google-site-verification" content="TODO" />
    <meta name="msvalidate.01" content="TODO" />
    <!-- noscript #1 -->
    <noscript>
    <style type="text/css">
      div, footer { display: none; }
      noscript div { display: block !important; }
      body { color: #333; background: white; width: 500px; margin: 100px auto; }
      h1 { font: bold 47px/1.5 sans-serif; margin: .6em 0; }
      p { font: 21px/1.5 Georgia,serif; margin: 1.5em 0; }
      small { font-size: 70%; color: gray; }
    </style>
    </noscript>
    <!-- Scripts -->
    <% if @failsafe != true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <% end %>
  </head>
  <body id="body" class="<%= @device_cls %> <%= @is_logged_in_cls %>">
    <!-- Inline scripts -->
    <script>
      serverData = {
        controller: '<%= params[:controller] %>',
        action: '<%= params[:action] %>',
        loc: {
          lat: <%= @location == nil ? 'null' : @location.latitude %>,
          lng: <%= @location == nil ? 'null' : @location.longitude %>,
          lock: <%= @location == nil ? 'null' : ( @location.lock == true ? 'true' : 'false' ) %>
        }
      }
    </script>
    <!-- noscript #2 -->
    <noscript>
    <div>
      <p class="h1">Javascript</p>
      <p>We're sorry! This site requires JavaScript enabled to work properly.</p>
      <div class="form-group"><a target="blank" href="https://www.google.com/search?q=how+to+enable+javascript" class="btn btn-primary btn-lg">How to enable Javascript</a></div>
    </div>
    </noscript>
    <!-- Navbar -->
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div id="burger-menu">
          <a href="#"><i class="fa fa-bars"></i></a>
        </div>
        <div id="marker-menu">
          <a href="#"><i class="fa fa-map-marker"></i></a>
        </div>
        <div class="navbar-header">
          <a href="/" class="navbar-brand" id="main-logo"><%= image_tag('logo/buildings_stroke_100x100.png', size: "50x50") %><div id="appname"><span>Navihub </span><small id="appname-beta">[beta]</small></div></a>
        </div>
        <div class="" id="navbar-main">
          <ul class="nav navbar-nav" id="menu-top">
            <li data-template="index"><%= link_to 'Search', controller: "search" %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">More <b class="caret"></b></a>
              <ul class="dropdown-menu" id="dd-more">
                <li><%= link_to 'About', controller: "about" %></li>
                <li><%= link_to 'Feedback', controller: "feedback" %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right" id="menu-alt">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span id="myacc-my">My</span> <span id="myacc-acc">acc</span><span id="myacc-ount">ount</span> <b class="caret"></b></a>
              <ul class="dropdown-menu" id="dd-myaccount">
                <li>
                  <%= link_to 'Create account', {controller: "settings", action: 'profile'}, class: 'create-account' %>
                </li>
                <li class="divider"></li>
                <li>
                  <div class="social-btn">
                    <a class="btn btn-block btn-sm btn-social btn-facebook" href="#"><i class="fa fa-facebook"></i><span class="social-signin-txt">Sign in with Facebook</span></a>
                  </div>
                  <div class="social-btn">
                    <a class="btn btn-block btn-sm btn-social btn-twitter" href="#"><i class="fa fa-twitter"></i><span class="social-signin-txt">Sign in with Twitter</span></a>
                  </div>
                  <div class="social-btn">
                    <a class="btn btn-block btn-sm btn-social btn-google-plus" href="#"><i class="fa fa-google-plus"></i><span class="social-signin-txt">Sign in with Google</span></a>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right" id="menu-loc">
            <li data-template="index">
                <div id="top-location">
                    <span class="top-location-top"><span>Location:</span> <span class="actual"><%= pretty_loc(@location) %></span></span><br />
                    <span class="top-location-bottom">
                      Not here?
                      <%= link_to 'change location', controller: "settings", action: 'location' %> |
                      <a class="top-location-autodetect autodetect-button" href="#">autodetect</a>
                    </span>
                </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <!-- Content -->
    <div class="container">
      <section id="yield">
        <%= yield %>
      </section>
    </div>
