                        <%= link_to 'Data Sources', controller: "pages", action: "data_sources" %>
                    </p>
                    <p>
                        <small class="gray footer-version">Version <%= @version %> (build <%= @build %>)</small>
                    </p>
                </div>
            </div>
        </div>
        <!-- Spinner -->
        <div class="spinner" id="spinner" style="display: none;">
            <div class="rect1"></div>
            <div class="rect2"></div>
            <div class="rect3"></div>
            <div class="rect4"></div>
            <div class="rect5"></div>
        </div>
    </footer>
</body>
</html>
