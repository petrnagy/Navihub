          <ul class="nav navbar-nav" id="menu-top">
            <li data-template="index"><%= link_to 'Search', controller: "search" %></li>
            <li data-template="index"><%= link_to 'About', controller: "search" %></li>
            <li data-template="index"><%= link_to 'Feedback', controller: "search" %></li>
